{% extends 'base.html.twig' %}

{% block title %}Avis{% endblock %}

{% block body %}
<div class="profile">
    <h1>Avis</h1>
    {% for comment in comments %}
        <a href="{{path('profile', {'id': comment.passenger.id})}}"><p> <span class="bold">Utilisateur :</span> {{ comment.passenger.firstname }} {{ comment.passenger.lastname }}</p></a>
        <p> <span class="bold">Note :</span> {{ comment.note }}</p>
        <p><span class="bold">Commentaire :</span> {{ comment.comment }}</p>
        <hr>
        <br>
    {% endfor %}
</div>
{% endblock %}