{% extends 'base.html.twig' %}

{% block title %}Profil de {{ app.user.firstname }} {{ app.user.lastname }}{% endblock %}

{% block body %}
{% for message in app.flashes('message') %}
    <div>{{message}}</div>
{% endfor %}
<h1>Profil de {{ app.user.firstname }} {{ app.user.lastname }}</h1>
<p>Nom : {{ app.user.lastname }}</p>
<p>Prénom : {{ app.user.firstname }}</p>
<p>E-mail : {{ app.user.email }}</p>
<a href="{{ path('profile_next_trips') }}">Prochain Trajet</a>
<a href="{{ path('profile_passed_trips') }}">Trajet Passé</a>
<a href="{{ path('profile_edit') }}">Modifier le profil</a>
<a href="{{ path('profile_edit_password') }}">Modifier le mot de passe</a>

<h3>Trajet effectue</h3>
<ul>
    {% for comment in comments %}
        <li>Date : {{ comment.trip.date }}</li>
        <li>Adresse de Depart : {{ comment.trip.addressStart }}</li>
        <li>Adresse d'arrivee : {{ comment.trip.addressEnd }}</li>
        <li>Note : {{ comment.note }} / 5</li>
        <li>Commentaire : {{ comment.comment }}</li>
    {% endfor %}
</ul>
{% endblock %}
