{% extends 'base.html.twig' %}

{% block title %}Commentaire sur le trajet - Cowoit{% endblock %}

{% block body %}

    <div class="row mb-2 form-card">
        <h1 class="h3 mb-3 font-weight-normal title">Laissez un commentaire</h1>
        <div class="col-2"></div>
        <div class="col-8 text-center bg-light card shadow p-3 mb-5 bg-white rounded">
            {{ form_start(form) }}
            <div class="form-floating mb-3">
                {{ form_widget(form.note) }}
                {{ form_label(form.note) }}
            </div>
            <div class="form-floating mb-3">
            {{ form_widget(form.comment) }}
            {{ form_label(form.comment) }}
            </div>
            <div class="mb-2">
                <button type="submit" class="button">Enregistrer</button>{{ button_label|default('') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}