{% extends 'base.html.twig' %}

{% block title %}Trajet passés{% endblock %}

{% block body %}
<div class="profile">
    <h1>Trajet passés</h1>
    {% if trips == null %}
        <h3>Aucun trajet effectué</h3>
    {% else %}
        {% for trip in trips %}
            <p> <span class="bold">Départ:</span> {{ trip.trip.addressStart }}</p>
            <p><span class="bold">Arrivée:</span> {{ trip.trip.addressEnd }}</p>
            <p><span class="bold">Date:</span> {{ trip.trip.date }}</p>
            <a href="{{ path('profile_comment', {'id': app.user.id ,'commentId': trip.trip.id}) }}">Laisser un commentaire</a>
            <br>
            <hr>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}