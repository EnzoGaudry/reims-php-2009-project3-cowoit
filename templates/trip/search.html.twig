{% extends 'base.html.twig' %}

{% block title %}COWOIT{% endblock %}

{% block body %}
<img src="{{ asset('build/images/imgcowoit.jpg') }}" alt="" class="max-height">
<div class="row mb-2 form-card">
    <div class="col-2"></div>
    <div class="col-8 text-center bg-light card shadow-lg p-3 mb-5 bg-white rounded">
        {{ form_start(form) }}
        <div class="form-floating mb-3 mt-3">
            {{ form_widget(form.date) }}
            {{ form_label(form.date) }} 
        </div>
        <div class="form-floating mb-3">
          {{ form_widget(form.addressStart) }}
          {{ form_label(form.addressStart) }}  
        </div>
        <div class="form-floating mb-3">
          {{ form_widget(form.addressEnd) }}
          {{ form_label(form.addressEnd) }}
        </div>
        <div class="mb-2">
            {{ form_row(form._token) }}
            <button class="btn btn-outline-success">Rechercher</button>{{ button_label|default('') }}</button>
            {{ form_end(form, {'render_rest': false}) }}   
        </div> 
    </div>
    <div class="col-2"></div>
</div>

{% for trip in trips %}
<ul>
    {{ trip.date }}
    {{ trip.addressStart }}
    {{ trip.addressEnd }}
    <a href="{{ path('trip_show', {'id': trip.id}) }}">Info</a>
</ul>
{% endfor %}

{% endblock %}