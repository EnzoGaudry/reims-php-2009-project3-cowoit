{% extends 'base.html.twig' %}

{% block title %}
    Proposer un trajet - Cowoit
{% endblock title %}

{% block body %}
    <section class="new-trip-block">
        <img src="{{ asset('build/images/carpooling2.png') }}" alt="carpool illustration" class="carpool-illustration"/>
        <h1 class="h3 mb-3 font-weight-normal new-trip-title">Proposer un trajet</h1>
    </section>
    <div class="row mb-2 form-card">
        <div class="col-1"></div>
        <div class="col-10 text-center bg-light card shadow p-3 mb-5 bg-white rounded new-trip-form">
            {{ form_start(form) }}
            <div class="form-floating mb-3">
                {{ form_widget(form.date) }}
                {{ form_label(form.date) }}
              </div>
            <div class="form-floating mb-3">
                {{ form_widget(form.addressStart) }}
                {{ form_label(form.addressStart) }}
            </div>
            <div class="form-floating mb-3">
              {{ form_widget(form.addressEnd) }}
              {{ form_label(form.addressEnd) }}
            </div>
            <div class="form-floating mb-3">
              {{ form_widget(form.nbPassengers) }}
              {{ form_label(form.nbPassengers) }}
            </div>
            <div class="mb-2">
                <button type="submit" class="button">Ajouter mon trajet</button>{{ button_label|default('') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock body %}